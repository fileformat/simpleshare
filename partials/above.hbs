    <script>
        function loadSites() {
            $.get({
                url: 'sitelist.json', dataType: 'json', success: function (data) {
                    $("#sitelist").empty();
                    var sites = data.sites;
                    for (var loop = 0; loop < sites.length; loop++) {
                        $("#sitelist").append($("<tr>")
                            .append($("<td>").addClass("iconcell")
                                .append($("<a>").attr("href", sites[loop].logolink)
                                    .append($("<img>").attr("src", sites[loop].logo).css("height", "24pt").css("width", "24pt")/* .css("padding-right", "10px") */))
                            )
                            .append($("<td>").addClass("hide-sm-down")
                                .append($("<span>").text(sites[loop].name)))
                            .append($("<td>")
                                .append($("<span>").text(sites[loop].id)))
                            .append($("<td>")
                                .append($("<a>").attr("href", "/go?site=" + sites[loop].id
                                    + "&url=" + encodeURIComponent("https://simpleshare.io/")
                                    + "&text=" + encodeURIComponent("Simple script-less share buttons")
                                    + "&summary=" + encodeURIComponent("The most awesome-est way to share!!!")
                                    + "&image=" + encodeURIComponent("https://www.vectorlogo.zone/logos/simpleshareio/simpleshareio-card.png"))
                                    .text("Share on " + sites[loop].name)
                                )
                            )
                        );
                    }
                }
            })
        }

        $(document).ready(loadSites);

    </script>
